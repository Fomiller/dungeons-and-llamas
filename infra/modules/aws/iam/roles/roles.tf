resource "aws_iam_role" "lambda_discord_bot" {
  name               = "${title(var.namespace)}LambdaDungeonsAndLlamasDiscordBot"
  assume_role_policy = <<EOF
{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Service": "lambda.amazonaws.com"
      },
      "Action": "sts:AssumeRole"
    }
  ]
}
EOF
}

